# EditorConfig is awesome: http://editorconfig.org

# Root
root = true

# General
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = space
indent_size = 4

# Javascript files
[*.js]
indent_style = space
indent_size = 4

# Stylesheet files
[*.css]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 4